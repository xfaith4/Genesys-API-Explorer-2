{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/genesys-api-explorer/insights/insightpack.schema.json",
  "title": "Genesys Ops Insight Pack",
  "type": "object",
  "required": ["id", "name", "version", "pipeline"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "owner": { "type": "string" },
    "owners": { "type": "array", "items": { "type": "string" } },
    "maturity": { "type": "string", "enum": ["alpha", "beta", "stable", "deprecated"] },
    "expectedRuntimeSec": { "type": "integer", "minimum": 0 },
    "notes": { "type": "string" },
    "examples": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "notes": { "type": "string" },
          "parameters": { "type": "object" }
        },
        "additionalProperties": true
      }
    },
    "scopes": { "type": "array", "items": { "type": "string" } },
    "tags": { "type": "array", "items": { "type": "string" } },
    "parameters": {
      "type": "object",
      "additionalProperties": {
        "anyOf": [
          { "type": ["string", "number", "boolean", "null", "object", "array"] },
          {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "required": { "type": "boolean" },
              "default": {},
              "description": { "type": "string" }
            },
            "additionalProperties": true
          }
        ]
      }
    },
    "pipeline": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "type": { "type": "string", "minLength": 1 },
          "description": { "type": "string" },
          "method": { "type": "string" },
          "uri": { "type": "string" },
          "path": { "type": "string" },
          "query": { "type": "object" },
          "headers": { "type": "object" },
          "bodyTemplate": { "type": ["object", "array", "string", "number", "boolean", "null"] },
          "script": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
